{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "JwtSettings": {
      "Secret": "Replace_this_text_with_your_own-secret_later.",
      "Issuer": "nmdb-auth-api",
      "Audience": "nmdb-client",
      "TokenExpirationInMinutes": 60,
      "RefreshTokenExpirationInDays": 3
    }
  },
  "AppSettings": {
    "Secret": "THIS IS USED TO SIGN AND VERIFY JWT TOKENS, REPLACE IT WITH YOUR OWN SECRET, IT CAN BE ANY STRING",
    "RefreshTokenTTL": 60
  },
  "AllowedUploadFiles": {
    "MaxKBSize": 5120,
    "MaxMediaMBSize": 100,
    "Image": [ ".jpeg", ".jpg", ".png", ".gif", ".tiff", ".svg", ".JPG", ".eps" ],
    "Video": [ ".mp4", "m4p", ".m4v", ".mp2", ".mpeg", ".mpe", ".mpv", ".ogg", ".webm", ".avi", ".wmv", ".mov", ".qt", ".flv", ".swf" ],
    "Audio": [ ".mp3" ],
    "Document": [ ".pdf", ".doc", ".docx", ".xlsx" ],
    "OtherFiles": []
  },
  "ImageURL": {
    "Small": "/upload/img/small",
    "Medium": "/upload/img/medium",
    "Large": "/upload/img/large",
    "Original": "/upload/img"
  },
  "UploadFolderPath": "/upload/img"
}
